{% if tasks|length >= 1 %}
	<table>
		<tr>
			<th>Tarea</th>
			<th>Prioridad</th>
			<th>Horas presupuestadas</th>
			<th>Estado</th>
			<th>Acciones</th>
		</tr>

		{% for task in tasks %}
			<tr class="estado-{{task.estado}}">
				<td>{{ task.title }}</td>
				<td>
					{% if task.priority == 'high' %}
						{{ 'Alta' }}
					{% elseif task.priority == 'medium' %}
						{{ 'Media' }}
					{% elseif task.priority == 'low' %}
						{{ 'Baja' }}
					{% endif %}
				</td>
				<td>{{ task.hours }}</td>
				<td>
					{% if task.estado == 'doing' %}
						{{ 'Abierta' }}
					{% elseif task.estado == 'done' %}
						{{ 'Cerrada' }}
					{% endif %}
				</td>
				<td class="buttons">
					<a href="{{ path('task_detail', {'id':task.id}) }}" class="btn-view">Ver</a>
					{% if app.user != null and task.user.id == app.user.id %}
						<a href="{{ path('task_edit', {'id':task.id}) }}" class="btn-edit">Editar</a>
						<a href="{{ path('task_delete', {'id':task.id}) }}" class="btn-delete">Borrar</a>
					{% endif %}
				</td>
			</tr>
		{% endfor %}

	</table>
{% else %}
	<strong>No hay tareas disponibles en este momento</strong>
{% endif %}
